{% assign current_product = product.selected_or_first_available_variant %}
{% assign product_image = current_product.featured_image | default: product.featured_image %}
<div class="container">
  <div class="row">
    <div class="col-md-6 col-12">
      <img
        class="img-fluid"
        src="{{product_image | img_url: 'large'}}"
        alt="{{product_image.alt}}"
        id="ProductImage">
      <div class="row">
        <div class="col my-4">
          {% for image in product.images %}
            <img
              src="{{image.src | img_url: 'medium'}}"
              alt="{{image.alt}}"
              height="100"
              width="100">
          {% endfor %}
        </div>
      </div>
    </div>
    <div class="col-md-6 col-12">
      <h1>{{ product.title }}</h1>
      <p>{{ current_product.price | money_with_currency }}</p>

      {% form 'product', product, class: "product-form", id: "AddToCartForm" %}
        <div class="mb-3">
          <select
            class="form-control"
            name="id"
            id="productSelect">
            {% for variant in product.variants %}
              <option value="{{variant.id}}">{{ variant.title }}</option>
            {% endfor %}
          </select>
        </div>
        <div class="mb-3">
          <input
            type="number"
            name="quantity"
            id="Quantity"
            value="1"
            min="1"
            class="form-control">
        </div>
        <button
          type="submit"
          name="add"
          id="AddToCart"
          class="btn btn-secondary">Add To Cart</button>
      {% endform %}
    </div>
  </div>

</div>